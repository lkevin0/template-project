{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run jest",
            "type": "shell",
            "command": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--testMatch",
                "'<rootDir>/unit/*.spec.js'",
                "--no-cache",
                "--config",
                "${workspaceFolder}/test/jest.config.js"
            ],
            "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}